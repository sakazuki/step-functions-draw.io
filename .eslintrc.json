{
  "extends": ["eslint:recommended"],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json",
    "tsconfigRootDir": "."
  },
  "env": {"browser": true, "es6": true},
  "globals": {
    "mxscript": false,
    "Draw": false,
    "Graph": false,
    "Editor": false,
    "EditDataDialog": true,
    "mxUtils": false,
    "mxEvent": false,
    "mxCellState": false,
    "mxConnectionHandler": false,
    "mxGraph": false,
    "mxObjectCodec": false,
    "mxVertexHandler": false,
    "mxEdgeHandler": false,
    "mxCell": false,
    "mxGeometry": false,
    "mxPoint": false,
    "mxResources": false,
    "mxEventObject": false,
    "mxHierarchicalLayout": false,
    "mxConstants": false,
    "mxMorphing": false,
    "mxForm": false,
    "mxCodecRegistry": false,
    "mxCodec": false,
    "mxClient": false,
    "mxCompactTreeLayout": false,
    "mxCellRenderer": false,
    "mxSwimlane": false,
    "AWS": false,
    "__listStateMachines": false,
    "__describeStateMachine": false,
    "__updateAWSconfig": false,
    "__deployStateMachine": false,
    "jsyaml": false,
    "jsep": false,
    "JSONEditor": false,
    "AWSconfig": "writable", 
    "StartPoint": "writable", 
    "EndPoint": "writable", 
    "TaskState": "writable", 
    "PassState": "writable", 
    "ChoiceState": "writable", 
    "WaitState": "writable", 
    "SucceedState": "writable", 
    "FailState": "writable", 
    "ParallelState": "writable",
    "MapState": "writable",
    "StartAtEdge": "writable",
    "NextEdge": "writable",
    "RetryEdge": "writable",
    "ChoiceEdge": "writable",
    "CatchEdge": "writable",
    "DefaultEdge": "writable",
    "$": false
  },
  "rules": {
    "indent": ["error", 2],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
    "semi": "error",
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "space-before-blocks": ["error", "always"],
    "space-before-function-paren": ["error", "always"],
    "camelcase": "warn",
    "no-undef": "warn",
    "no-unused-vars": "warn"
  }
}
